# Database Configuration
DATABASE_URL=postgresql://username:password@your-rds-endpoint:5432/buildvive
# OR individual variables:
DB_HOST=your-rds-endpoint
DB_PORT=5432
DB_NAME=buildvive
DB_USER=postgres
DB_PASSWORD=your-password

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=buildvive-uploads

# Email Configuration
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USERNAME=your-email@buildvive.com
SMTP_PASSWORD=your-email-password
ADMIN_EMAILS=admin@buildvive.com
FROM_EMAIL=noreply@buildvive.com

# OpenAI Configuration
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-4o-mini

# Twilio Configuration (for phone calls)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=your-twilio-number

# VAPI Configuration (for AI phone calls)
VAPI_API_KEY=your-vapi-key

# App Configuration
NEXTAUTH_SECRET=your-secret-key
NEXTAUTH_URL=https://your-domain.com

# Vercel KV (fallback for development)
KV_REST_API_URL=your-kv-url
KV_REST_API_TOKEN=your-kv-token
KV_REST_API_READ_ONLY_TOKEN=your-kv-readonly-token

# Vercel Blob (fallback for development)
BLOB_READ_WRITE_TOKEN=your-blob-token
